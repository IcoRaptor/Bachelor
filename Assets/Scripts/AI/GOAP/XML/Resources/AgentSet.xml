<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<AgentSet>
    <agent id="Adult">
        <actions>
            <action>Work</action>
            <action>GoToWork</action>
            <action>GoToHome</action>
            <action>Sleep</action>
            <action>GoToStore</action>
            <action>BuyFood</action>
            <action>Eat</action>
            <action>GoToBar</action>
            <action>Drink</action>
        </actions>
        <goals>
            <goal>Working</goal>
            <goal>Sleeping</goal>
            <goal>Eating</goal>
            <goal>HavingFun</goal>
        </goals>
    </agent>

    <agent id="Child">
        <actions>
            <action>GoToHome</action>
            <action>Sleep</action>
            <action>Nap</action>
            <action>GoToSchool</action>
            <action>Learn</action>
            <action>GoToPlayground</action>
            <action>Play</action>
        </actions>
        <goals>
            <goal>Working</goal>
            <goal>Sleeping</goal>
            <goal>HavingFun</goal>
        </goals>
    </agent>

    <agent id="Guard">
        <actions>
            <action>Patrol</action>
            <action>GoToWork</action>
            <action>GoToHome</action>
            <action>Sleep</action>
            <action>GoToStore</action>
            <action>BuyFood</action>
            <action>Eat</action>
        </actions>
        <goals>
            <goal>Working</goal>
            <goal>Sleeping</goal>
            <goal>Eating</goal>
        </goals>
    </agent>
</AgentSet>