<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<GoalSet>
<!--
    WorldState Symbols:     working, rested, full, happy
    Relevance Symbols:      sleep, money, hunger, fun
-->
    <goal id="Working">
        <relevance>
            <symbol>money</symbol>
        </relevance>
        <target>
            <symbol>working</symbol>
        </target>
    </goal>

    <goal id="Sleeping">
        <relevance>
            <symbol>sleep</symbol>
        </relevance>
        <target>
            <symbol>rested</symbol>
        </target>
    </goal>

    <goal id="Eating">
        <relevance>
            <symbol>hunger</symbol>
        </relevance>
        <target>
            <symbol>full</symbol>
        </target>
    </goal>

    <goal id="HavingFun">
        <relevance>
            <symbol>fun</symbol>
        </relevance>
        <target>
            <symbol>happy</symbol>
        </target>
    </goal>
</GoalSet>