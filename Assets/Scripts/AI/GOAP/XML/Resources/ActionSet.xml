<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<ActionSet>
<!--
    WorldState Symbols: 
    
    working, happy, rested, full, 
    atHome, atWork, atStore, atBar, atSchool, atPlayground,
    hasMoney, hasFood
-->
    <action id="Work">
        <dialog>I'm currently working.</dialog>
        <cost>100</cost>
        <time>360</time>
        <conditions>
            <symbol>atWork</symbol>
        </conditions>
        <effects>
            <symbol>working</symbol>
            <symbol>hasMoney</symbol>
        </effects>
    </action> 

    <action id="GoToWork">
        <dialog>I'm on my way to work.</dialog>
        <cost>30</cost>
        <time>0</time>
        <conditions></conditions>
        <effects>
            <symbol>atWork</symbol>
        </effects>
    </action> 

    <action id="Sleep">
        <dialog>Zzzzz...</dialog>
        <cost>70</cost>
        <time>420</time>
        <conditions>
            <symbol>atHome</symbol>
        </conditions>
        <effects>
            <symbol>rested</symbol>
        </effects>
    </action> 

    <action id="Nap">
        <dialog>Zzzzz...</dialog>
        <cost>20</cost>
        <time>120</time>
        <conditions>
            <symbol>atHome</symbol>
        </conditions>
        <effects>
            <symbol>rested</symbol>
        </effects>
    </action> 

     <action id="GoToHome">
        <dialog>I'm on my way home.</dialog>
        <cost>30</cost>
        <time>0</time>
        <conditions></conditions>
        <effects>
            <symbol>atHome</symbol>
        </effects>
    </action> 

    <action id="Eat">
        <dialog>I'm eating.</dialog>
        <cost>50</cost>
        <time>60</time>
        <conditions>
            <symbol>hasFood</symbol>
            <symbol>atHome</symbol>      
        </conditions>
        <effects>
            <symbol>full</symbol>
        </effects>
    </action> 

    <action id="GoToStore">
        <dialog>I'm on my way to the store.</dialog>
        <cost>30</cost>
        <time>0</time>
        <conditions>
            <symbol>hasMoney</symbol>
        </conditions>
        <effects>
            <symbol>atStore</symbol>
        </effects>
    </action>

    <action id="BuyFood">
        <dialog>Hmm... what will I make for lunch?</dialog>
        <cost>50</cost>
        <time>30</time>
        <conditions>
            <symbol>atStore</symbol>
        </conditions>
        <effects>
            <symbol>hasFood</symbol>
        </effects>
    </action>

    <action id="GoToBar">
        <dialog>I'm on my way to the bar.</dialog>
        <cost>30</cost>
        <time>0</time>
        <conditions>
            <symbol>hasMoney</symbol>
        </conditions>
        <effects>
            <symbol>atBar</symbol>
        </effects>
    </action>

    <action id="Drink">
        <dialog>*gulp*</dialog>
        <cost>50</cost>
        <time>60</time>
        <conditions>
            <symbol>atBar</symbol>
        </conditions>
        <effects>
            <symbol>happy</symbol>
        </effects>
    </action>

    <action id="GoToSchool">
        <dialog>I'm on my way to school.</dialog>
        <cost>30</cost>
        <time>0</time>
        <conditions></conditions>
        <effects>
            <symbol>atSchool</symbol>
        </effects>
    </action>

    <action id="Learn">
        <dialog>I have to study hard.</dialog>
        <cost>70</cost>
        <time>120</time>
        <conditions>
            <symbol>atSchool</symbol>
        </conditions>
        <effects>
            <symbol>working</symbol>
        </effects>
    </action>

    <action id="Patrol">
        <dialog>I'm keeping this town safe.</dialog>
        <cost>100</cost>
        <time>180</time>
        <conditions>
        </conditions>
        <effects>
            <symbol>working</symbol>
            <symbol>hasMoney</symbol>
        </effects>
    </action>

    <action id="GoToPlayground">
        <dialog>I'm on my way to the playground.</dialog>
        <cost>30</cost>
        <time>0</time>
        <conditions></conditions>
        <effects>
            <symbol>atPlayground</symbol>
        </effects>
    </action>

    <action id="Play">
        <dialog>Yay, this is fun!</dialog>
        <cost>70</cost>
        <time>120</time>
        <conditions>
            <symbol>atPlayground</symbol>
        </conditions>
        <effects>
            <symbol>happy</symbol>
        </effects>
    </action>
</ActionSet>